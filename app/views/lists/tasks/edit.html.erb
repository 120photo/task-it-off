<h1>Edit task properties</h1>
<p>Find me in app/views/lists/tasks/edit.html.erb</p>

<div class="container">

  <div class="form-group">
    <%= simple_form_for [@list, @task] do |f| %>
      <%= f.input :name, required: true, placeholder: "Edit Task" %>
      <%= f.input :status, as: :boolean, checked_value: true, unchecked_value: false, class: 'checkbox' %>
      <%= f.button :submit, "Make Edits", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
