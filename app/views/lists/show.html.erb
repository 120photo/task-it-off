    </div>
    <div class="col-md-9">
      <h2>Task</h2>
      <% if current_user %>
      <table class="table table-striped table-hover">
        <th>Task Name</th>
        <th>Days Left</th>
        <% @lists_tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= distance_of_time_in_words_to_now(task.created_at + 7.days) %></td>
        </tr>
        <% end %>
      </table>
        <%= render partial: 'lists/tasks/addtask' %>
      <% else %>
        <p>
          You need to
          <%= link_to "Sign In", new_user_session_path %>
          to view your list(s).
        </p>
      <% end %>
    </div>

    </div>
